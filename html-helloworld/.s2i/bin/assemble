#! /bin/bash

echo "Before Assembling..."

chmod +rwx index.html
chmod +rwx /tmp/src/src/info.html
chmod +rwx /tmp/src/src/data.html

echo "Built today --> " $(date '+%Y-%m-%d') >> index.html

echo "Copying..."

cp -Rv /tmp/src/src/* ./

echo "Fantastic Pages =============GOING!==========" >> info.html

